{
  "steps": [
    {
       "name": "gcr.io/cloud-builders/gsutil",
       "args": [
           "cp",
		   "gs://${_MODEL_REPO}/lr_model.pkl",
           "./lab2/prediction-api-lr/model.pkl"
        ]
    },
	{
      "name": "python:3.12.7",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "cd ./lab2/prediction-api-lr && python -m venv .myenv && . .myenv/bin/activate && python -m pip install --upgrade pip && python -m pip install -r requirements.txt && python -m pytest --junitxml=${SHORT_SHA}_test_log.xml ./tests"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/prediction-api-lr:0.0.1",
        "./lab2/prediction-api-lr"
      ]
    },   
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/prediction-api-lr:0.0.1"
      ]
    },    
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-api-lr",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/prediction-api-lr:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "5000",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated"
      ]
    }
  ],
   "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
